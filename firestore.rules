rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions for cleaner rules
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User subscription status - primary source of subscription state
    match /user_subscription_status/{uid} {
      allow read: if isOwner(uid);
      allow write: if false; // Only allow writes via Firebase Admin SDK (Stripe webhook)
    }

    // Subscriptions collection - used for additional subscription data
    match /subscriptions/{uid} {
      allow read: if isOwner(uid);
      allow write: if false; // Only allow writes via Firebase Admin SDK
    }

    // Legacy user_subscriptions collection (if needed)
    match /user_subscriptions/{userId} {
      allow read: if isOwner(userId);
      allow write: if false;
    }

    // Usage tracking - users can read and write their own usage data
    match /usage/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Usage records with audit trail
    match /usage_records/{recordId} {
      allow read: if isSignedIn() && (request.auth.uid == resource.data.userId);
      allow create: if isSignedIn() && (request.auth.uid == request.resource.data.userId);
      allow update, delete: if false;
    }

    // User usage tracking
    match /user_usage/{userId} {
      allow read, create, update: if isOwner(userId);
      allow delete: if false;
    }

    // Audits collection - users can only access their own audits
    match /audits/{auditId} {
      allow read: if isSignedIn() && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == resource.data.ownerUid);
      allow create: if isSignedIn() && 
        request.auth.uid == request.resource.data.userId;
      allow update, delete: if isSignedIn() && 
        request.auth.uid == resource.data.userId;
    }

    // Reports collection - linked to audits
    match /reports/{reportId} {
      allow read: if isSignedIn() && 
        request.auth.uid == resource.data.userId;
      allow create: if isSignedIn() && 
        request.auth.uid == request.resource.data.userId;
      allow update, delete: if isSignedIn() && 
        request.auth.uid == resource.data.userId;
    }

    // ✅ User profiles (if you have them)
    match /users/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // ❌ Default deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
